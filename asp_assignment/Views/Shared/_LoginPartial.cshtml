@using Microsoft.AspNetCore.Identity
@using asp_assignment.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="col-md-5 col-lg-5 col-xs-6 navbar-collapse collapse">

    @if (SignInManager.IsSignedIn(User))
    {

        <ul class="nav navbar-nav navbar-right">
            <li> <a   asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hi @UserManager.GetUserName(User)</a></li>
            <li>
                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                    <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
                </form>
            </li>
            <li></li>
            <li>
                @await Component.InvokeAsync("ShoppingCartViewModel")

            </li>
            
        </ul>

    }
    else
    {
        <ul class="nav navbar-nav navbar-right">
            <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
            <li><a  asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
            <li>
                @await Component.InvokeAsync("ShoppingCartViewModel")
            </li>
        </ul>
    }
</div>
